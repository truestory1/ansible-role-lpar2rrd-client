{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)molecule[^/]*$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?) )?depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s*.*?_VERSION=(?<currentValue>.*)",
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?) )?depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s*.*?_image: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/main.yml/"
      ],
      "datasourceTemplate": "custom.lpar_agent",
      "matchStrings": [
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?) )?depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s*.*?_version: (?<currentValue>.*)"
      ]
    }
  ],
  "customDatasources": {
    "lpar_agent": {
      "defaultRegistryUrlTemplate": "https://lpar2rrd.com/agent/",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": [
        "custom.lpar_agent"
      ],
      "extractVersion": "lpar2rrd-agent_(?<version>.+)_all\\.deb$"
    }
  ]
}
